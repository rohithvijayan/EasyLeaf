{
    "manifest_version": 3,
    "name": "EasyLeaf - Overleaf Beginner Mode",
    "version": "1.0.0",
    "description": "Make Overleaf safe and easy for LaTeX beginners. Beginner Mode protects your document from breaking.",
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "*://*.overleaf.com/*",
        "http://localhost:8000/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.overleaf.com/project/*"
            ],
            "js": [
                "content/controllers/LogParser.js",
                "content/controllers/ErrorOverlayManager.js",
                "content/services/ApiClient.js",
                "content/ui/ErrorBubble.js",
                "content/main.js"
            ],
            "css": [
                "styles/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "EasyLeaf",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "styles/*",
                "icons/*"
            ],
            "matches": [
                "*://*.overleaf.com/*"
            ]
        }
    ]
}